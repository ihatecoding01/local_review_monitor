{
  "name": "local-business-review-monitor",
  "version": "1.0.1",
  "description": "ReviewReady - Monitor and respond to business reviews across platforms",
  "type": "module",
  "main": "api/index.js",
  "scripts": {
    "start": "vercel dev",
    "dev": "vercel dev",
    "build": "npm run install-client && cd client && npm run build",
    "install-client": "cd client && npm install",
    "heroku-postbuild": "npm run install-client && npm run build",
    "lint": "eslint . --ext .js,.jsx --ignore-path .gitignore",
    "lint:fix": "eslint . --ext .js,.jsx --ignore-path .gitignore --fix",
    "test": "npm run test:client",
    "test:client": "cd client && npm test -- --ci --coverage --watchAll=false",
    "check-unused": "node tools/find-unused-assets.js"
  },
  "dependencies": {
    "pg": "^8.11.0",
    "axios": "^1.5.0",
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-rate-limit": "^6.10.0",
    "helmet": "^7.0.0",
    "jsonwebtoken": "^9.0.2",
    "node-cron": "^4.2.1"
  },
  "devDependencies": {
    "eslint": "^8.57.0",
    "glob": "^11.0.3",
    "nodemon": "^3.0.1",
    "prettier": "^3.2.5",
    "vercel": "^44.7.3"
  },
  "engines": {
    "node": "20.x"
  }
}
